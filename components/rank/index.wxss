@import "../../app.wxss";

.toplist {
  height: 100%;
  background: #f2f2f2;
}

.item {
  display: flex;
  margin: 0 40rpx;
  padding-top: 40rpx;
  height: 200rpx;
  border-radius: 20rpx !important;
}

.icon {
  flex: 0 0 200rpx;
  width: 200rpx;
  height: 200rpx;
}

.icon image {
  width: 200rpx !important;
  height: 200rpx;
}

.songlist {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  padding: 0 40rpx;
  height: 200rpx;
  overflow: hidden;
  background: #ffffff;
  font-size: 24rpx;
}

.song {
  line-height: 58rpx;
  display: flex;
  flex-direction: row;
}

.singer-index {
  display: inline-block;
}

.singername {
  color: rgba(0, 0, 0, 0.4);
}


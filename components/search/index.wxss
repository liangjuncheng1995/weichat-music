@import "../../app.wxss";

.search {
  overflow: hidden;
}

.search-box-container {
  margin: 40rpx;
}

.shortcut-container {
  bottom: 0;
  width: 100%;
}

.shortcut {
  overflow: hidden;
}

.hot-key {
  margin: 0 40rpx 40rpx 40rpx;
}

.hot-key .title {
  margin-bottom: 40rpx;
  font-size: 28rpx;
  /* color: $theme-color; */
}

.item-ul .item {
  display: inline-block;
  padding: 10rpx 20rpx;
  margin: 0 40rpx 20rpx 0;
  border-radius: 12rpx;
  /* background: $theme-background-white; */
  font-size: 28rpx;
  color: #333;
}


.search-history {
  position: relative;
  margin: 0 40rpx;
}

.search-history .title {
  display: flex;
  align-items: center;
  height: 80rpx;
  font-size: 28rpx;
  /* color: $theme-color; */
}

.search-history .title .text {
  flex: 1;
}
.clear {
  width: 60rpx;
  height: 60rpx;
  text-align: center;
  line-height: 60rpx;
}
.icon-clear {
  font-size: 28rpx !important;
}